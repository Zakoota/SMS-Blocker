<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow android:layout_margin="0dp">

            <TextView
                style="@style/tvField"
                android:text="Notifications:"
                android:paddingBottom="0dp"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"/>

            <ToggleButton
                android:layout_height="wrap_content"
                android:id="@+id/btn_tgl"
                android:layout_width="match_parent" />
        </TableRow>
        <TableRow>
            <TextView
                style="@style/tvField"
                android:text="Block Unknown Numbers:"
                android:paddingBottom="0dp"
                android:paddingTop="12dp"
                android:paddingLeft="12dp" />
            <ToggleButton
                android:layout_height="wrap_content"
                android:id="@+id/btn_tgl2"
                android:layout_width="match_parent"
                android:textOff="@string/tgl_off"
                android:textOn="@string/tgl_on" />
        </TableRow>
    </TableLayout>


    <TextView
        style="@style/tvField"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="15sp"
        android:gravity="center"
        android:text="Set days for Auto Delete blocked \nMessages"
        android:id="@+id/textView2"
        android:textSize="16sp"/>


    <EditText
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/et_days"
        android:layout_gravity="center" />

    <Button
        android:layout_marginTop="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Days"

        android:id="@+id/btn_save"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
